syntax on
filetype plugin on

let mapleader = ","

set ff=unix
set number
set ignorecase
set number relativenumber
set backspace=indent,eol,start
set cursorline
set encoding=utf-8
set hidden

set tabstop=4
set shiftwidth=2
set expandtab

set guifont=Consolas:h12
set guioptions-=r
set guioptions-=L
set guioptions-=T
set guioptions-=m
